

<h1>Velprods</h1>

<table>
  <thead>
    <tr>
      <th>Prod nos</th>
      <th>Nutrition1</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @velprods.each do |velprod| %>
      <% if current_user == velprod.user %>
        <tr>
          <td><%= velprod.prod_nos %></td>
          <td><%= link_to 'Edit', edit_velprod_path(velprod) %></td>
          <td><%= link_to 'Destroy', velprod, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br/><br/>

<%= form_with(url: '/velprods/test', method: 'get') do |f| %>
  <%= f.select :tocopy, options_from_collection_for_select(@baze, 'id', 'prodnos'), prompt: 'Select prod to edit', class: "form-select"  %>
  <%= f.submit "Add product" %>
<% end %>
<br>

<%= link_to 'New Velprod', new_velprod_path %>
