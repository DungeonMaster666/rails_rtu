


<br/>

<div class="row justify-content-around">
  <div class="col-4">
    <div class="card" style="width: 24rem;">
      <div class="card-body">
        <h1 class="card-title">Noklusēts produktu saraksts</h1>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th><%= I18n.t(:prodnos) %></th>
            </tr>

          </thead>
          <tbody>
          <% @bazesprods.each do |bazesprod| %>

            <tr>
              <td><%= bazesprod.prodnos %></td>

              <td><%= link_to('Sīkāk', bazesprods_product_path(id: bazesprod.id, page: @bazesprods.current_page), class: "btn btn-dark btn-sm")%></td>
              <% if current_user&.admin? %>
                <td><%= link_to 'Dzēst', bazesprod, method: :delete, data: { confirm: 'Vai Jūs esat pārliecināti?' }, class: "btn btn-danger btn-sm" %></td>
              <% end %>
            </tr>
              <% end %>

          </tbody>

        </table>

      </div>
      <%= link_to 'Uz galveni', lietotajaparametrs_path, class: "btn btn-secondary" %>

    </div>

  </div>

</div>



<br/>
<br/>
<div class="container-fluid bg-light">
  <div class="col-md-12 text-center">
    <div class="row">
      <div class="col">
      </div>
      <div class="col">
        <div class="container pagination justify-content-center" >
          <%= paginate @bazesprods %>
        </div>
      </div>
      <div class="col">
      </div>
    </div>
  </div>
</div>
